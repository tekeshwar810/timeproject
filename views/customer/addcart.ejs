<% include linkFile2 %>
<% include customerNav %>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">

                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Remove</th>
                      </tr>
                    </thead>
                    <tbody>
    
                        <% for (time of Object.values(item)) { %>
                      <tr>
                        <td>
                            <div class="row p-0  mr-0">
                                <div class="col-md-3 border p-0">
                                    <div class="pImage">
                                        <img src="../fileupload/Product/<%= time.item.pImage %>" alt="Loading">
                                    </div>
                                </div>
                                <div class="col-md-7 ml-3">
                                 <div class="pName mt-3">
                                    <h3><%= time.item.pName %></h3>
                                </div>
                                </div>
                            </div>
                        </td>
                        <td><h6 class="mt-3" id="price"><%= time.item.pPrice * time.qty %></h6></td>
                        <td><h6 class="mt-3 pl-4"></h6><%= time.qty %></td>
                        <td>
                            <a href=""><i class="fa fa-trash-o mt-3" style="font-weight: bold; color: red;" aria-hidden="true"></i></a>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
          </div>
          <div class="col-md-7">
        
      </div>
      <div class="col-md-5">
        <div class="totalPrice border"><span>Total Price: </span><%= session.cart.totalprice %></div>
      </div>
    </div>
</div>

<script src="../javascripts/preloader.js"></script>
<script src="../javascripts/dropdown.js"></script>
</body>
</html>