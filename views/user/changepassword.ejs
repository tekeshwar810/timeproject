<% include linkFile1 %>
<% include userNav %>
<div class="container mt-0 ">
    <div class="row">
        <div class="col-sm-12">
            <form method="POST" action="/user/changepassword" class="d-flex flex-column align-items-center justify-content-center" style="height: 400px;">
                <div class="form-group w-50">
                    <h1 class="pt-4 pb-4 pl-0">Change Password</h1>
                    <input type="password" class="form-control" placeholder="Old Password" name="oldpass">
            </div>
                <div class="input-group" style="width: 50%; border-radius: 5px; border: 1px solid rgb(218, 208, 208); "
                    id="show_hide_password">
                    <input type="password" class="form-control" placeholder="New Password" name="newpass" style="outline: none; border: none;" type="text">  
                </div>
            <div class="input-group mt-3" style="width: 50%; border-radius: 5px; border: 1px solid rgb(218, 208, 208); "
                id="show_hide_password">
                <input type="password" class="form-control" placeholder="Confirm Password" name="confirmpass" style="outline: none; border: none;" type="text">  
            </div>
            <% for(row of errPass) {%>
                <span style="color: red; width: 50%; text-align: end; font-size: 13px; padding-top: 5px;" ><%= row.msg %></span>
            <% }  %>
                <button type="submit" class="btn btn-primary w-50 pt-2 mt-3">Change Password</button>
                <div class="text-center mt-3" style="color: green; font-size: larger;"><%= Msg %></div>
                <div class="text-center mt-3" style="color: red; font-size: larger;"><%= Err %></div>
            </form>
            
        </div>
        
    </div>
</div>
    <script src="../javascripts/preloader.js"></script>
    <script src="../javascripts/dropdown.js"></script>
    </body>

    </html>