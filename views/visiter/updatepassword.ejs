<% include components/preloader %>
<% include components/nav %>
<div class="container mt-0 ">
    <div class="row">
        <div class="col-sm-12">
            <form method="POST" action="/updatepassword" class="d-flex flex-column align-items-center justify-content-center" style="height: 400px;">
                <h1 class="pt-4 pb-4 pl-0 w-50">Reset Password</h1>
                <div class="input-group w-50" style="width: 50%; border-radius: 5px; border: 1px solid rgb(218, 208, 208); "
                    id="show_hide_password">
                    <input type="password" class="form-control" placeholder="New Password" name="newpass" style="outline: none; border: none;" type="text">  
                </div>
            <div class="input-group mt-3 w-50" style="width: 50%; border-radius: 5px; border: 1px solid rgb(218, 208, 208); "
                id="show_hide_password">
                <input type="password" class="form-control" placeholder="Confirm Password" name="confirmpass" style="outline: none; border: none;" type="text">  
            </div>
            <% for(row of errMsg) {%>
                <span style="color: red; width: 50%; text-align: end; font-size: 13px; padding-top: 5px;" ><%= row.msg %></span>
            <% }  %>
                     <button type="submit" class="btn btn-primary w-50 pt-2 mt-3">Reset Password</button>
                     <div class="text-center mt-3" style="color: green; font-size: larger;"><%= msg %></div>

                
            </form>
            
        </div>
        
    </div>
</div>
    <script src="../javascripts/preloader.js"></script>
    <script src="../javascripts/dropdown.js"></script>
    </body>

    </html>